<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <?foreach {/ltm}?>
    <devices xmlns="http://tail-f.com/ns/ncs">
      <device>
        <name>{./device}</name>
          <config>

          <ltm xmlns="http://tail-f.com/ned/f5-bigip">
            <!-- create node definitions -->
            <?foreach {./nodes}?>
            <node>
              <name>{./name}</name>
              <address>{./address}</address>
            </node>
            <?end?>
            <!-- create pool definitions -->
            <pool>
              <name>{$POOL_NAME}</name>
              <members>
                <?foreach {./nodes}?>
                <member>
                  <node_name>{./name}</node_name>
                  <port>{./port}</port>
                  <address>{./address}</address>
                </member>
                <?end?>
              </members>
              <!-- TODO: how do we handle monitors -->
              <!-- <monitor>monitor_tcp_8143_20i_101t</monitor> -->
            </pool>

            <virtual>
              <name>VIP_NAME</name>
              <destination>1.1.1.1:http</destination>
              <ip-protocol>{$PROTOCOL}</ip-protocol>
              <mask>{$VIP_MASK}</mask>
              <pool>{$POOL_NAME}</pool>
              <profiles>
                <profile>
                  <name>{$PROFILE}</name>
                </profile>
              </profiles>
              <source>{$SOURCE}</source>
              <translate-address>enabled</translate-address>
              <translate-port>enabled</translate-port>
            </virtual>



          </ltm>
          </config>
      </device>
    </devices>
  <?end?>
</config-template>
